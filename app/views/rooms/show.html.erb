<%= turbo_stream_from @room %>
<div class="text-center p-2 bg-purple-100 text-sm shadow-lg relative">
  <b class="uppercase"><%= @room.name %>:</b>
  <%= @room.description %>
</div>
<div class="height-calc max-w-screen-lg mx-auto bg-white">
  <div class="pl-4 flex flex-col justify-end h-full">
    <div class="flex flex-col-reverse overflow-y-scroll h-full">
      <div id="messages" class="pt-4 mr-4">
        <%= render @room.messages %>
      </div>
    </div>
  </div>
</div>
<div class="bg-gray-100 bg-opacity-90 w-full p-4 max-w-screen-lg mx-auto">
  <%= form_with model: [@room, Message.new],
                data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do  |f| %>
    <div class="flex">
      <%= f.text_field(
        :comment,
        autocomplete: "off",
        placeholder: "Start a conversation",
        class: "ring-1 ring-gray-300 rounded-full border py-3 flex-1 text-sm outline-none px-4") %>
    </div>
  <% end %>
</div>
