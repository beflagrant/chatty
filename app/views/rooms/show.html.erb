<div class="text-center p-2 bg-gray-100 text-sm shadow-lg relative">
  <b class="uppercase"><%= @room.name %>:</b>
  <%= @room.description %>
</div>
<div class="height-calc">
  <div class="pl-4 flex flex-col justify-end h-full">
    <div class="flex flex-col-reverse overflow-y-scroll h-full">
      <div id="<%= dom_id(@room) %>" class="pt-4 mr-4">
        <%= render @room.messages %>
      </div>
    </div>
  </div>
</div>
<div class="bg-primary bg-opacity-90 w-full p-4">
  <%= form_with model: [@room, Message.new] do  |f| %>
    <div class="flex">
      <%= f.text_field(
        :comment,
        autocomplete: "off",
        placeholder: "Start a conversation",
        class: "rounded-full border p-3 flex-1 text-sm outline-none") %>
    </div>
  <% end %>
</div>
