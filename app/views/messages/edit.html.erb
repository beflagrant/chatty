<%= turbo_frame_tag dom_id(@message) do %>
  <div class="rounded-2xl px-4 py-2 mb-2 text-s w-fit">
    <span class="font-bold text-sm"><%= @message.user.handle %></span>
    <span class="ml-1 text-xs">
      <%= @message.created_at.strftime('%l:%M') %>
      <%= link_to "cancel", room_message_path(@message.room, @message) %>
    </span>
    <div class="text-black w-full">
      <%= form_with model: [@message.room, @message] do  |f| %>
        <div class="flex">
          <%= f.text_field(
            :comment,
            autocomplete: "off" ) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
